
<div>
    <h1 class="title">Composite</h1>
    <h5 class="tagline">FACES FROM AROUND THE WORLD</h5>
    <center>
        <form>
            <input type="text" placeholder="Enter a location" class="search" id="txtPlaces" required>
        </form>
    </center>
</div>

<div id="locale">
    <%= params[:current] %>
</div>    

<center>
<div id="faces">

        <% if @flag %>
            <h5 id="empty">Search a location to get started.</h5>
        <% end %>

        <% @img_paths.each do |image| %>
            <%= link_to image.link, :class => "links", :target => "_blank" do %>
                <%= image_tag(image.name, :class => "images") %>
            <% end %>
        <% end %>

</div>
</center>

<% if not @flag %>
    <div>
        <button onclick="addFaces()" class="load"><h3 id="loadText">Load More</h3>
        <img src="assets/load.gif" id="gif"></button>
    </div>
<% end %>

<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"></script>

<script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', function () {
        var places = new google.maps.places.Autocomplete(document.getElementById('txtPlaces'));
        google.maps.event.addListener(places, 'place_changed', function () {
            var place = places.getPlace();
            var address = place.formatted_address;
            var latitude = place.geometry.location.lat();
            var longitude = place.geometry.location.lng();
            var location = document.getElementById('txtPlaces');
            var url = window.location.href;
            
            if (url.indexOf('?') > -1){
                url = url.split("?")[0]+'?lat='+latitude+"&lng="+longitude+"&current="+place.formatted_address;
            } else {
                url += '?lat='+latitude+"&lng="+longitude+"&current="+place.formatted_address;
            }
            // setTimeout(check, 1000);
            window.location.href = url;
        });
    });
</script>

<script>

var offset = 0.0;

function addFaces() {

  offset += .015;

  document.getElementById("loadText").style.display = "none";
  document.getElementById("gif").style.display = "inline";

  var compositeAPI = "http://localhost:3000/api/v1/home.json?lat="+ (parseFloat(<%=params[:lat]%>) + offset).toString() + "&lng=" + (parseFloat(<%=params[:lng]%>) + offset).toString();

  $.getJSON( compositeAPI, {
    format: "json"
  })
    .done(function( data ) {
      $.each( data, function( i, item ) {
        $( "<img>" ).attr({"src":"/assets/"+item.table.name, "class":"images"}).appendTo("#faces");
      });
      $(document).trigger('faces_complete');
    });
}

function loadGif() {
    document.getElementById("loadText").style.display = "block";
    document.getElementById("gif").style.display = "none";
}

$(document).bind('faces_complete', loadGif);

</script>
